<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.isar.kkrakshakavach.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_soSFragment"
            app:destination="@id/soSFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.isar.kkrakshakavach.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.isar.kkrakshakavach.ContactsFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/soSFragment"
        android:name="com.isar.kkrakshakavach.SoSFragment"
        android:label="SOS"
        tools:layout="@layout/fragment_so_s" />
</navigation>
